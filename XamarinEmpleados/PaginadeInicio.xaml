<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="XamarinEmpleados.PaginadeInicio">
    <ScrollView>
        <StackLayout Padding="10" Spacing="10">
            <Label Text="Empleados" Font="24" HorizontalOptions="Center" VerticalOptions="Center" FontAttributes="Bold"></Label>
            <Entry x:Name="nombresEntry" Placeholder="Nombres"></Entry>
            <Entry x:Name="apellidosEntry" Placeholder="Apellidos"></Entry>
            <Entry x:Name="salarioEntry" Placeholder="Salario" Keyboard="Numeric"></Entry>
            <StackLayout Orientation="Horizontal">
                <Label Text="Fecha de contratacion" VerticalOptions="Center"></Label>
                <DatePicker x:Name="fechaContratoDatePicker"></DatePicker>
                <Label Text="Activo" VerticalOptions="Center"></Label>
                <Switch x:Name="activoSwitch" VerticalOptions="Center" IsToggled="True"></Switch>
            </StackLayout>
            <Button x:Name="AgregarButton" Text="Agregar"></Button>
            <ListView x:Name="listaListView"></ListView>
        </StackLayout>
    </ScrollView>
</ContentPage>
